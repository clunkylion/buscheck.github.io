.tabs{
    margin-top: 2em
    border-top: 1px solid var(--mainPink)
    &-link{
        //border: 1px solid blue
        border-bottom: 1.4px solid var(--mainPink)
        color: var(--mainPurple)
    }
    &-content{
        display: none    
        img{
            max-width: 100%
            padding-top: 2.5em
            margin-bottom: 2em
        }
    }
    &grid{
        margin-top: 4em 
    }
    label{
        padding: 1em 0 
        display: block
        position relative
        &:after{
            display: none
            content: ""
            height: 5px
            position: absolute
            bottom: 0
            width: 50%
            left: 0
            border-radius: .5em
            transform: translateX(50%)
            box-shadow: inset 0 -15px 0 -10px var(--mainPurple)

        }
    }
    input{
        display: none
    }
    input[id="easyUse"]:checked{
        & ~ ul [for="easyUse"]:after{
            display: block
        }
        & ~ .tabs-grid #tab-easyUse{
            display: block
        }
    }
    input[id="enterprise"]:checked{
        & ~ ul [for="enterprise"]:after{
            display: block
        }
        & ~ .tabs-grid #tab-enterprise{
            display: block
        }
    }
    input[id="dataOptimize"]:checked{
        & ~ ul [for="dataOptimize"]:after{
            display: block
        }
        & ~ .tabs-grid #tab-dataOptimize{
            display: block
        }
    }
}