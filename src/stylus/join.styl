.join{
    background: var(--mainPurple)    
    color: white
    padding: 3em 0
    text-align: center
    small{
        text-transform: uppercase
    }
    @media screen and (min-width: 1024px){
        .u-h4{
            font-size: 1.5em
            max-width: 450px
            margin: 1em auto
        }
    }
    .form{
        max-width: 450px
        margin: auto
        .u-button{
            margin: 0 
        }
        &-input{
            width: 100%
            padding: 1.5em
            box-sizing: border-box   
            margin-bottom: 1em
            border-radius: 10px
            border: none
            font-size: .9em
            outline: 0
            &::-webkit-input-placeholder{
                color: var(--mainPurple)    
            }
        }  
        @media screen and (min-width: 1024px){
            display: flex    
            &-input{
                width: 70%
                flex-shrink: 0
                margin-right: 1em    
                margin-bottom: 0 
            }
        }  
    }
}
