@import './menu.styl'
.header{
    //border: 1px solid red;
    background: white
    z-index: 1
    position: sticky
    top: 0
    left: 0
    right: 0
    padding: .8em 0
    transition: .3s background
    &-logo{
        display: inline-flex    
        //border: 1px solid red
        width: 180px
        height: 45px
        background: url('../assets/logo.png') no-repeat center
        background-size: contain  
    }
    &-content{
        display: flex 
        justify-content: space-between
        align-items: center
    }
}
