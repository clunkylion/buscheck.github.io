.download{
    padding: .6em 
    text-align: center

    img{
        max-width: 100%
    }
    &-grid{
        margin-top: 2em
        display: grid
        grid-row-gap: 2em 
    }
    &-item{
        box-shadow: 0 10px 11px -5px rgba(255, 59, 140, 0.40) 
        margin-top: 1em
        border-radius: 1.5em
        padding: 1em
        padding-top: 2em
        background: url('../assets/bg-dots.svg') repeat-x center bottom 100px
        .u-p{
            margin-bottom: 4em 
            margin-top: .5em
        }
        .u-h3{
            margin-bottom: .5rem 0
            margin-top: 1em
        }
    }
}